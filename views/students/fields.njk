<div class="item">
            <div>Profile Picture</div>
            <div>
                <input
                    type="url"
                    name="avatar_url"
                    placeholder="http://"
                    value="{{student.avatar_url}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Student</div>
            <div>
                <input
                    type="text"
                    name="name"
                    placeholder="Student name"
                    value="{{student.name}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Student</div>
            <div>
                <input
                    type="email"
                    name="email"
                    placeholder="name@email.com"
                    value="{{student.email}}"
                >
            </div>
        </div>
        <div class="item">
            <div>Birthdate</div>
            <div><input type="date" name="birth"
            value="{{student.birth}}"></div>
        </div>
        <div class="item">
            <div>Grade</div>
            <div>
                <select name="grade">
                    <option value="5th Grade" {%if student.grade =="5th Grade"%} selected{%endif%}>
                        5th Grade</option>
                    <option value="6th Grade"{%if student.grade =="6th Grade"%} selected{%endif%}>
                        6th Grade</option>                     
                    <option value="7th Grade"{%if student.grade =="7th Grade"%} selected{%endif%}>
                        7th Grade</option>  
                    <option value="8th Grade"{%if student.grade =="8th Grade"%} selected{%endif%}>
                        8th Grade</option>                   
                    <option value="9th Grade"{%if student.grade =="9th Grade"%} selected{%endif%}>
                        9th Grade</option>
                    <option value="10th Grade"{%if student.grade =="10th Grade"%} selected{%endif%}>
                        10th Grade</option>
                    <option value="11th Grade"{%if student.grade =="11th Grade"%} selected{%endif%}>
                        11th Grade</option>                    
                </select>
            </div>
        </div>
        <div class="item classes">
            <div>Hours per Week</div>
            <div>
               <input
                    type="number"
                    name="hours"
                    placeholder="Insert how many hours per week"
                    value="{{student.hours}}"
                >  
            </div>
        </div>
        
        <button type="submit" class="save">Save</button>
    </section>