{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/students/create">New</a>
    <table>
        <thead>
            <tr>
                <th>Students</th>
                <th>Emails</th>
                <th>Grade</th>
                <th>Action</th>
            </tr>            
        </thead>
        <tbody>
            {%for student in students %}
            <tr>
                <td>
                    <span style="background-image: url({{student.avatar_url}})"></span>
                    {{student.name}}</td>                    
                <td>{{student.email}}</td>
                <td>{{student.grade}}</td>
                <td><a href="/students/{{student.id}}">See more</a></td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>
{% endblock content %}