{% extends "layout.njk" %}

{% block content %}
<div class="card table-container">
    <a href="/teachers/create">New</a>
    <table>
        <thead>
            <tr>
                <th>Teacher</th>
                <th>Classes</th>
                <th>Action</th>
            </tr>            
        </thead>
        <tbody>
            {%for teacher in teachers %}
            <tr>
                <td>
                    <span style="background-image: url({{teacher.avatar_url}})"></span>
                    {{teacher.name}}</td>                    
                <td>{{teacher.studies}}</td>
                <td><a href="/teachers/{{teacher.id}}">See more</a></td>
            </tr>
            {%endfor%}
        </tbody>
    </table>
</div>
{% endblock content %}